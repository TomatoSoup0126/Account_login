<div class="container py-5">
  <div class="row">
    <div class="col-12 col-lg-4 col-xl-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title text-center">Account Login</h3>

          <form method="POST" action="/">
            <div class="form-group">

              <input type="email" class="form-control" name="account" id="emailInput" aria-describedby="emailHelp"
                placeholder="Enter email" {{#if userInput}}value={{userInput.account}}{{/if}}>

              {{#if wrongAccount}}
              <small id="emailHelp" class="form-text text-danger">{{wrongAccount}}</small>
              {{/if}}

            </div>

            <div class="form-group">

              <input type="password" class="form-control" name="password" id="passwordInput" placeholder="Password">
              {{#if wrongPassword}}
              <small id="passwordHelp" class="form-text text-danger">{{wrongPassword}}</small>
              {{/if}}
            </div>

            <div class="row justify-content-center">
              <button type="submit" class="btn btn-light">Submit</button>
            </div>

          </form>

        </div>
      </div>
    </div>
  </div>
</div>